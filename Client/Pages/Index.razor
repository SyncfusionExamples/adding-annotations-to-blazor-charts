@page "/"

<SfChart Title="Weather Statistics">
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category"
                       Title="Days of the Week"></ChartPrimaryXAxis>
    <ChartPrimaryYAxis Title="Temperature Value" LabelFormat=" {value}°C"> </ChartPrimaryYAxis>
    <ChartSeriesCollection>
        <ChartSeries DataSource="@ChartData" XName="Days" YName="Temperature" Type="ChartSeriesType.Spline">
            <ChartMarker Visible="true" Width="10" Height="10"></ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>
    <ChartAnnotations>
        <ChartAnnotation CoordinateUnits="Units.Point" X="@Tuesday" Y="32">
            <ContentTemplate>
                <div>
                    <img src="images/chart/sunny.png" style="width: 41px; height: 41px" />
                </div>
            </ContentTemplate>
        </ChartAnnotation>
    </ChartAnnotations>
</SfChart>

@code {

    public string Sunday = "Sunday", Tuesday = "Tuesday";

    public class ChartDataModel
    {
        public string Days { get; set; }
        public double Temperature { get; set; }
    }

    List<ChartDataModel> ChartData = new List<ChartDataModel>
{
        new ChartDataModel { Days = "Sunday", Temperature = 15 },
        new ChartDataModel { Days = "Monday" , Temperature = 22 },
        new ChartDataModel { Days = "Tuesday", Temperature = 32 },
        new ChartDataModel { Days = "Wednesday" , Temperature = 31 },
        new ChartDataModel { Days = "Thursday", Temperature = 29 },
        new ChartDataModel { Days = "Friday", Temperature = 24 },
        new ChartDataModel { Days = "Saturday", Temperature = 18 }

    };
}
